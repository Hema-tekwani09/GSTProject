{
  "taxpayerContainer": {
    "maxWidth": "1000px",
    "margin": "2rem auto",
    "padding": "2rem",
    "backgroundColor": "#fff",
    "borderRadius": "12px",
    "boxShadow": "0 12px 32px rgba(0, 0, 0, 0.07)",
    "fontFamily": "Segoe UI, sans-serif"
  },
  "formSection": {
    "display": "flex",
    "flexWrap": "wrap",
    "gap": "1rem",
    "alignItems": "center",
    "marginBottom": "2rem"
  },
  "formInput": {
    "flex": "1",
    "minWidth": "220px",
    "padding": "12px 16px",
    "fontSize": "14px",
    "border": "1px solid #ddd",
    "borderRadius": "8px",
    "background": "#f9fafb",
    "transition": "0.3s"
  },
  "captchaContainer": {
    "display": "flex",
    "alignItems": "center",
    "gap": "10px"
  },
  "captchaBox": {
    "display": "flex",
    "gap": "8px",
    "padding": "10px 18px",
    "backgroundColor": "#eef2ff",
    "border": "2px dashed #b94eed",
    "borderRadius": "8px",
    "fontWeight": "bold",
    "fontSize": "18px",
    "letterSpacing": "4px",
    "color": "#1e3a8a",
    "height": "42px",
    "alignItems": "center",
    "justifyContent": "center",
    "userSelect": "none"
  },
  "refreshBtn": {
    "color": "#4b5563",
    "backgroundColor": "#f7ecff",
    "border": "none",
    "fontSize": "20px",
    "cursor": "pointer",
    "transition": "transform 0.2s"
  },
  "searchBtn": {
    "backgroundColor": "rgba(69, 214, 91, 0.1)",
    "color": "rgb(69, 214, 91)",
    "border": "none",
    "padding": "12px 20px",
    "fontWeight": "600",
    "borderRadius": "8px",
    "fontSize": "14px",
    "cursor": "pointer"
  },
  "errorMessage": {
    "color": "#e19cee",
    "fontSize": "14px"
  }
}
